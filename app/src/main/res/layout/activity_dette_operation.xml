<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gris"
    android:gravity="center_horizontal">

    <!--Bar -->

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/blue">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/mt_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Client Name"
            app:titleTextColor="@color/white"
            app:titleCentered="true"
            app:navigationIcon="@drawable/outline_arrow_back_24"
            app:navigationIconTint="@color/white"
            app:titleTextAppearance="@style/ThemeDetty" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Dashboard-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/roud_border_all"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance générale"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:fontFamily="@font/robotosemicondensedblack"
            android:textSize="25sp"/>

        <!-- la couleur devient rouge si supérieur à 0 et verte si égale à O -->
        <TextView
            android:id="@+id/tv_Solde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotosemicondensedblack"
            android:text="0.0 FCFA"
            android:textColor="@color/rouge"
            android:textStyle="bold"
            android:textSize="30sp"/>
    </LinearLayout>

    <!-- Recherche barre-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opérations  --"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:fontFamily="@font/robotosemicondensedblack"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:fontFamily="@font/robotosemicondensedblack"
            android:textSize="18sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aucune opération pour ce client"
        android:textColor="@color/gris"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:visibility="gone"
        tools:visibility="visible"/>
    <!-- Liste des opérations -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOpération"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="8dp"
        android:background="@drawable/roud_border_all"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_dette_operation"
        tools:itemCount="10"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="2"
        android:layout_marginBottom="50dp"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/bnt_paie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_marginRight="10dp"

            android:padding="20dp"
            app:backgroundTint="@color/vertclai"
            android:text="Paiement"
            android:textStyle="bold"
            android:textColor="@color/vert"
            android:textSize="18sp"
            android:textAllCaps="true"
            app:cornerRadius="10dp"/>

        <Button
            android:id="@+id/bnt_dette"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"

            android:padding="20dp"
            app:backgroundTint="@color/rougeclaire"
            android:text="Dette"
            android:textStyle="bold"
            android:textColor="@color/rouge"
            android:textSize="18sp"
            android:textAllCaps="true"
            app:cornerRadius="10dp"/>

    </GridLayout>

</LinearLayout>