<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gris"
    android:gravity="center_horizontal">

    <!--Bar -->

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/blue">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Ajouter Client"
            app:titleTextColor="@color/white"
            app:titleCentered="true"
            app:navigationIcon="@drawable/outline_arrow_back_24"
            app:navigationIconTint="@color/white"
            app:titleTextAppearance="@style/ThemeDetty" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Button d'incrire-->
        <Button
            android:id="@+id/bnt_addclient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="20dp"
            app:backgroundTint="@color/blue"
            android:text="Créer un nouveau client"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAllCaps="true"
            app:cornerRadius="10dp"/>

        <!--Button importer dépuis contact-->
        <Button
            android:id="@+id/bnt_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="20dp"
            app:backgroundTint="@color/bleuCiel"
            android:text="Importer Contacts"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAllCaps="true"
            app:cornerRadius="10dp"/>

        </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Liste des contacts-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewClients"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:background="@drawable/roud_border_all"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_client"
            tools:itemCount="10"/>
    </FrameLayout>

</LinearLayout>